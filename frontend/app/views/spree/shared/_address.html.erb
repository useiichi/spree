<div class="address vcard">
  <% unless address.company.blank? %>
    <div class="org">
      <%= address.company %>
    </div>
  <% end %>

  <div class="fn"><%= address.full_name %></div>

  <div class="adr">
    <div class="street-address">
      <span class="postal-code">ã€’<%= address.zipcode %></span>
    </div>
    <div class="local">
      <span class="region"><%= address.state_text %></span><span class="locality"><%= address.city %></span><span class="street-address-line"><%= address.address1 %>
      </span>
      <% unless address.address2.blank? %>
        <div class="street-address-line">
          <%= address.address2 %>
        </div>
      <% end %>

      <div class="country-name" style="display:none"><%= address.country.try(:name) %></div>
    </div>
  </div>

  <% unless address.phone.blank? %>
    <div class="tel">
      <span class="type"><%= Spree.t(:phone) %></span>
      <%= address.phone %>
    </div>
  <% end %>
  <% unless address.alternative_phone.blank? %>
    <div class="alternative-phone tel">
      <span class="type"><%= Spree.t(:alternative_phone) %></span>
      <%= address.alternative_phone %>
    </div>
  <% end %>
</div>
